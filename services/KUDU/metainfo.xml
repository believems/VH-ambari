<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>KUDU</name>
            <displayName>Kudu</displayName>
            <comment>kudu.注意:kudu要手动安装,ambari里只负责管理</comment>
            <version>1.4.0-cdh5.12.2</version>
            <components>
                <component>
                    <name>KUDU_MASTER</name>
                    <displayName>Kudu master</displayName>
                    <category>MASTER</category>
                    <commandScript>
                        <script>scripts/master.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                </component>
                <component>
                    <name>KUDU_TABLET_SERVER</name>
                    <displayName>Kudu tablet server</displayName>
                    <category>SLAVE</category>
                    <commandScript>
                        <script>scripts/tabletServer.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                </component>
            </components>
            <quickLinksConfigurations>
                <quickLinksConfiguration>
                    <fileName>quicklinks.json</fileName>
                    <default>true</default>
                </quickLinksConfiguration>
            </quickLinksConfigurations>
        </service>
    </services>
</metainfo>